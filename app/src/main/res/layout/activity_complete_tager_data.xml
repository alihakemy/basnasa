<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.authentication.user.create.CreateUserAccountActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:rotation="180"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_navigate_next_24" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="64dp"
        android:text="@string/CompleteJoin"
        android:fontFamily="@font/text_medium"
        android:textColor="#E37494"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="90dp"

                app:srcCompat="@drawable/ic_baseline_add_circle_24" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:fontFamily="@font/two_light"
                android:text="اضف صوره" />

            <EditText
                android:id="@+id/editTextTextPersonName2"


                style="@style/editext"
                android:textSize="14sp"

                android:hint="الاسم" />

            <EditText
                android:id="@+id/editTextTextPersonName3"

                style="@style/editext"
                android:hint="البريد الاليكترونى "
                android:textSize="14sp"


                android:padding="10dp" />


            <EditText
                android:id="@+id/editTextTextPersonName"

                style="@style/editext"
                android:hint="اسم المشروع"
                android:ems="10"
                android:textSize="14sp"

                android:padding="10dp" />


            <EditText
                android:id="@+id/shopeName"
                style="@style/editext"


                android:hint="المنطقه"
                android:textSize="14sp"

                android:inputType="text"
                android:padding="10dp" />

            <Spinner
                style="@style/editext"

                android:id="@+id/cat"
                android:layout_marginTop="8dp"
                android:textSize="14sp"

                android:padding="10dp"
                android:inputType="none"
                />
            <EditText

                style="@style/editext"
                android:id="@+id/arrivalTime"

                android:hint="الوقت الازم لتوصيل طلبك"
                android:ems="10"
                android:textSize="14sp"

                android:padding="10dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/editetext_rec"
                android:textSize="14sp"

                android:id="@+id/description"

                android:hint="اكتب نبزه مختصره عن المتجر"


                android:padding="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/editetext_rec"

                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"

                        android:id="@+id/faceLink"

                        android:background="@null"


                        android:layout_weight="1"

                        android:ems="10"
                        android:padding="10dp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/facebook" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/editetext_rec"

                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/instaLink"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"



                        android:layout_weight="1"

                        android:background="@null"
                        android:ems="10"
                        android:padding="10dp" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:srcCompat="@drawable/in" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/editetext_rec"

                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"


                        android:id="@+id/snapLink"

                        android:layout_weight="1"

                        android:background="@null"
                        android:ems="10"
                        android:padding="10dp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:srcCompat="@drawable/snapchat" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/editetext_rec"
                    android:layout_marginRight="4dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"

                        android:id="@+id/webLink"

                        android:layout_weight="1"

                        android:background="@null"
                        android:ems="10"
                        android:padding="10dp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:srcCompat="@drawable/web" />
                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/editetext_rec"

                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"

                        android:background="@null"


                        android:id="@+id/phone"
                        android:layout_weight="1"

                        android:ems="10"
                        android:padding="10dp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:srcCompat="@drawable/phone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/editetext_rec"
                    android:layout_marginRight="4dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"


                        android:id="@+id/whatLink"

                        android:layout_weight="1"

                        android:background="@null"
                        android:ems="10"
                        android:padding="10dp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:srcCompat="@drawable/wh" />
                </LinearLayout>




            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/appCompatImageView3"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/appCompatImageView4"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_group_96525" />

                <TextView
                    android:id="@+id/location"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"

                    android:paddingStart="@dimen/dimen_8"
                    android:paddingEnd="@dimen/dimen_8"
                    android:text="@string/locationChoice"
                    android:textColor="@color/white"
                    app:backgroundTint="@null"
                    app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView3"
                    app:layout_constraintEnd_toStartOf="@+id/appCompatImageView4"
                    app:layout_constraintStart_toStartOf="@+id/appCompatImageView3"
                    app:layout_constraintTop_toTopOf="@+id/appCompatImageView3" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/appCompatImageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="end|center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="@+id/location"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/location"
                    app:srcCompat="@drawable/ic_pin" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button"
                style="@style/myMaterialButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:cornerRadius="15sp"

                android:elevation="10dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="16dp"
                android:text="@string/next"
                android:layout_marginBottom="50dp"
                app:backgroundTint="@null" />

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/dialog"
        android:id="@+id/include"

        />

</androidx.constraintlayout.widget.ConstraintLayout>